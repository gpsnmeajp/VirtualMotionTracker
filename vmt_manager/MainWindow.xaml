<Window x:Class="vmt_manager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:vmt_manager"
		Width="650"
		Height="800"
        mc:Ignorable="d"
        Title="VMT Manager" Loaded="Window_Loaded" Closed="Window_Closed" ResizeMode="NoResize">
	<DockPanel LastChildFill="True" Name="AllDockPanel">
		<StatusBar DockPanel.Dock="Bottom" Name="StatusBar">
			<StatusBarItem>
				<DockPanel Width="650">
					<TextBlock Padding="2,0,0,0" Name="StatusBarTextBlock" Text="Virtual Motion Tracker" FontWeight="Bold" DockPanel.Dock="Top" />
					<TextBlock Padding="2,0,0,0" Name="StatusBarDashboardAlertTextBlock" Text="Steam VR Dashboard is opening. Button, Finger does not working.&#xA;SteamVR ダッシュボードが開いています。ボタン操作・指姿勢は無効です。" Background="Red" Foreground="White" FontWeight="Bold" DockPanel.Dock="Top" />
				</DockPanel>
			</StatusBarItem>
		</StatusBar>
		<TabControl DockPanel.Dock="Top" Name="MainTabControl">
			<TabItem Header="Install">
				<DockPanel LastChildFill="True">
					<DockPanel.Background>
						<LinearGradientBrush EndPoint="1,1" StartPoint="0,0">
							<GradientStop Color="#FF636363" Offset="0"/>
							<GradientStop Color="#FF111111" Offset="1"/>
						</LinearGradientBrush>
					</DockPanel.Background>
					<DockPanel Name="TopErrorDockPanel" Background="Red" DockPanel.Dock="Top" Visibility="Collapsed">
						<TextBlock Text="" Name="TopErrorTextBlock" DockPanel.Dock="Top" Foreground="White" TextWrapping="Wrap" />
						<Button Content="Try fix it. / 修正を試みる" Name="TryFixItButton" DockPanel.Dock="Top" Background="Pink" Visibility="Collapsed" Click="FixItButton"/>
					</DockPanel>
					<TextBlock Text="VMT is not installed. Click install button to start use VMT.&#xA;VMTはインストールされていません。使い始めるにはInstallボタンを押してください。" Name="TopNotInstalledTextBlock" DockPanel.Dock="Top" Background="Green" Foreground="White" TextWrapping="Wrap" />
					<Grid  DockPanel.Dock="Top" Margin="1" Name="InstallGrid" Height="50">
						<Grid.ColumnDefinitions>
							<ColumnDefinition/>
							<ColumnDefinition/>
						</Grid.ColumnDefinitions>
						<Button Content="Install" Name="InstallButtonName" Click="InstallButton" Grid.Column="0" Margin="1" BorderThickness="3">
							<Button.Background>
								<LinearGradientBrush EndPoint="0,0" StartPoint="0,1">
									<GradientStop Color="#55FF55" Offset="0"/>
									<GradientStop Color="#CCFFCC" Offset="1"/>
								</LinearGradientBrush>
							</Button.Background>
							<Button.BorderBrush>
								<SolidColorBrush Color="#00CC00"/>
							</Button.BorderBrush>
						</Button>
						<Button Content="Uninstall" Click="UninstallButton" Grid.Column="1" Margin="1" BorderThickness="3">
							<Button.Background>
								<LinearGradientBrush EndPoint="0,0" StartPoint="0,1">
									<GradientStop Color="#FF5555" Offset="0"/>
									<GradientStop Color="#FFCCCC" Offset="1"/>
								</LinearGradientBrush>
							</Button.Background>
							<Button.BorderBrush>
								<SolidColorBrush Color="#CC0000"/>
							</Button.BorderBrush>
						</Button>
					</Grid>
					<Grid  DockPanel.Dock="Top" Margin="1">
						<Grid.ColumnDefinitions>
							<ColumnDefinition/>
							<ColumnDefinition/>
						</Grid.ColumnDefinitions>
						<Button Content="Enable Null Driver (Vitrual HMD)"  Click="EnableNullHMDDriverButton" Grid.Column="0" Margin="1"/>
						<Button Content="Disable Null Driver (Vitrual HMD)" Click="DisableNullHMDDriverButton" Grid.Column="1" Margin="1"/>
					</Grid>
					<Grid DockPanel.Dock="Top" Margin="2">
						<Grid.ColumnDefinitions>
							<ColumnDefinition/>
							<ColumnDefinition/>
							<ColumnDefinition/>
							<ColumnDefinition/>
						</Grid.ColumnDefinitions>
						<TextBlock HorizontalAlignment="Left" Text="Manager: " Grid.Column="0" Foreground="LightGray" />
						<TextBlock Name="ManagerVersion"  Grid.Column="1" Foreground="LightGray" />
						<TextBlock HorizontalAlignment="Left" Text="Driver: "  Grid.Column="2" Foreground="LightGray" />
						<TextBlock Name="DriverVersion"  Grid.Column="3" Foreground="LightGray" />
					</Grid>
					<TextBlock DockPanel.Dock="Bottom" TextAlignment="Center" Margin="1" ><Hyperlink Foreground="IndianRed" NavigateUri="https://gpsnmeajp.github.io/VirtualMotionTrackerDocument/report/" RequestNavigate="Hyperlink_RequestNavigate">Send bug report.  不具合レポートを送る</Hyperlink></TextBlock>
					<TextBlock DockPanel.Dock="Bottom" TextAlignment="Center" Margin="1"><Hyperlink Foreground="LightSkyBlue" NavigateUri="https://github.com/gpsnmeajp/VirtualMotionTracker" RequestNavigate="Hyperlink_RequestNavigate">https://github.com/gpsnmeajp/VirtualMotionTracker</Hyperlink></TextBlock>
					<TextBlock DockPanel.Dock="Bottom" TextAlignment="Center" Margin="1" Foreground="Yellow" FontWeight="Bold" Text="No support provided. サポートは提供していません"></TextBlock>
					<TextBlock DockPanel.Dock="Bottom" TextAlignment="Center" Margin="1" Foreground="White" Text="An easy-to-use virtual tracker driver for OpenVR. &#xA; With your own device, your own software, and any.&#xA;"></TextBlock>
					<Image DockPanel.Dock="Bottom" Source="Resources/VMTlogo.png" Margin="20,5,20,0"/>
				</DockPanel>
			</TabItem>
			<TabItem Header="RoomSetup" Height="22" VerticalAlignment="Bottom">
				<DockPanel Name="ControlDock" IsEnabled="False">
					<TextBlock TextAlignment="Center" Text="Initial setup &amp; Operation check" DockPanel.Dock="Top" Background="#EEEEEE" />
					<Grid VerticalAlignment="Top">
						<Grid.ColumnDefinitions>
							<ColumnDefinition/>
							<ColumnDefinition/>
						</Grid.ColumnDefinitions>
						<GroupBox Header="Room Seup (Required)" Grid.Column="0">
							<DockPanel Margin="2"  LastChildFill="False">
								<TextBlock Text="RoomMatrix" DockPanel.Dock="Top" Margin="1"/>
								<TextBox Name="RoomMatrixTextBox" IsEnabled="False" IsReadOnly="True" Text="" DockPanel.Dock="Top" Height="69" Margin="1"/>
								<CheckBox Content="Temporary" DockPanel.Dock="Top" Name="SetRoomMatrixTemporaryCheckBox"></CheckBox>
								<Button Content="Set RoomMatrix" Height="80" DockPanel.Dock="Top" Name="SetRoomMatrixButtonName" Click="SetRoomMatrixButton" Margin="1" BorderThickness="3">
									<Button.Background>
										<LinearGradientBrush EndPoint="0,0" StartPoint="0,1">
											<GradientStop Color="#55FF55" Offset="0"/>
											<GradientStop Color="#CCFFCC" Offset="1"/>
										</LinearGradientBrush>
									</Button.Background>
									<Button.BorderBrush>
										<SolidColorBrush Color="#00CC00"/>
									</Button.BorderBrush>
								</Button>
								<Button Content="Reset RoomMatrix" DockPanel.Dock="Top" Click="ResetRoomMatrixButton" Margin="1"/>
							</DockPanel>
						</GroupBox>
						<GroupBox Header="Position Test" Grid.Column="1">
							<DockPanel Margin="2" LastChildFill="False">
								<TextBox Name="CheckPositionTextBox" IsEnabled="False" IsReadOnly="True" Text="-,-,-" DockPanel.Dock="Top" Margin="1"/>
								<TextBlock Text="VMT_0 Raw Position" DockPanel.Dock="Top" Margin="1"/>
								<TextBox Name="CheckPositionRawTextBox" IsEnabled="False" IsReadOnly="True" Text="-,-,-" DockPanel.Dock="Top" Margin="1"/>
								<TextBlock Text="VMT_0 Speed" DockPanel.Dock="Top" Margin="1"/>
								<TextBox Name="CheckPositionRawSpeedTextBox" IsEnabled="False" IsReadOnly="True" Text="-,-,-" DockPanel.Dock="Top" Margin="1"/>
								<Button DockPanel.Dock="Top" Click="CheckPositionButton" Margin="1">
									<TextBlock Text="Check VMT__0 Position(Room) &#xA;(Try set RoomPos=[1,1,1] )" TextAlignment="Center"/>
								</Button>
								<Button DockPanel.Dock="Top" Click="CheckPositionRawButton" Margin="1">
									<TextBlock Text="Check VMT__0 Position(Raw) &#xA;(Try set RawPos=[1,1,1] )" TextAlignment="Center"/>
								</Button>
								<Button DockPanel.Dock="Top" Click="CheckTemplatePosition1Button" Margin="1">
									<TextBlock Text="Set Hand Position (Room)&#xA;(VMT__1, VMT__2)" TextAlignment="Center"/>
								</Button>
								<TextBlock Text="VMT_0 Joint Serial No" DockPanel.Dock="Top" Margin="1"/>
								<CheckBox Content="VMT_0 Position Vibration" Name="VMT_0_PositionVibrationCheckBox"  DockPanel.Dock="Top" Margin="1"/>
								<TextBox Name="JointSerialNoTextBox" Text="HMD" DockPanel.Dock="Top" Margin="1"/>
								<Button DockPanel.Dock="Top" Click="CheckJointPositionButton" Margin="1">
									<TextBlock Text="Check VMT__0 Position &#xA;(Try set JointPos=[0.1,0.0,-0.5] )" TextAlignment="Center"/>
								</Button>
								<Button DockPanel.Dock="Top" Click="CheckJointPosition2Button" Margin="1">
									<TextBlock Text="Check VMT__0 Position &#xA;(Try set FollowPos=[-0.1,0.0,-0.5] )" TextAlignment="Center"/>
								</Button>
								<Button DockPanel.Dock="Top" Click="CheckTemplatePosition1JointButton" Margin="1">
									<TextBlock Text="Set Hand Position(Joint) &#xA;(VMT__1, VMT__2)" TextAlignment="Center"/>
								</Button>
								<Button DockPanel.Dock="Top" Click="CheckTemplatePosition1FollowButton" Margin="1">
									<TextBlock Text="Set Hand Position(Follow) &#xA;(VMT__1, VMT__2)" TextAlignment="Center"/>
								</Button>
								<TextBlock Text="Position Coordinate" DockPanel.Dock="Top" Margin="1"/>
								<ComboBox DockPanel.Dock="Top" Name="CoordinateCombo" SelectedIndex="0">
									<ComboBoxItem>Driver Coordinate</ComboBoxItem>
									<ComboBoxItem>Unity Coordinate</ComboBoxItem>
								</ComboBox>
							</DockPanel>
						</GroupBox>
					</Grid>
				</DockPanel>
			</TabItem>
			<TabItem Header="Control">
				<DockPanel>
					<TextBlock TextAlignment="Center" Text="Control Command for all VMT Devices" DockPanel.Dock="Top" Background="#EEEEEE" />
					<DockPanel Margin="2"  LastChildFill="False" Width="350">
						<GroupBox Header="Volatile (Non save config)" DockPanel.Dock="Top">
							<StackPanel>
								<Button Content="Reload Setting" Click="ReloadJsonButton" Margin="1"/>
								<Button Content="Device Reset" Click="ResetButton" Margin="1"/>
								<Button Content="Show all" Click="ShowAllButton" Margin="1"/>
								<Button Content="Request Restart (SteamVR)" Click="RequestRestartButton" Margin="1"/>
								<Grid>
									<Grid.ColumnDefinitions>
										<ColumnDefinition/>
										<ColumnDefinition Width="50" />
										<ColumnDefinition Width="50"/>
									</Grid.ColumnDefinitions>
									<Grid.RowDefinitions>
										<RowDefinition/>
										<RowDefinition/>
									</Grid.RowDefinitions>
									<TextBlock Text="Auto Pose Udate" Grid.Row="0" Grid.Column="0"/>
									<Button Content="ON" Click="EnableAutoPoseUdateButton"  Grid.Row="0" Grid.Column="1" Margin="1"/>
									<Button Content="OFF" Click="DisableAutoPoseUdateButton"  Grid.Row="0" Grid.Column="2" Margin="1"/>

									<TextBlock Text="Diag log" Grid.Row="1" Grid.Column="0"/>
									<Button Content="ON" Click="EnableDiaglogButton"  Grid.Row="1" Grid.Column="1" Margin="1"/>
									<Button Content="OFF" Click="DisableDiaglogButton"  Grid.Row="1" Grid.Column="2" Margin="1"/>
								</Grid>
								<CheckBox Content="Load Testing" Name="LoadTestCheckBox" IsChecked="False" Checked="LoadTestCheckBoxEvent" Unchecked="LoadTestCheckBoxEvent" Margin="1"/>
							</StackPanel>
						</GroupBox>
						<GroupBox Header="Non-Volatile (Save config)" DockPanel.Dock="Top" Margin="0,10,0,0">
							<Grid>
								<Grid.ColumnDefinitions>
									<ColumnDefinition/>
									<ColumnDefinition Width="50" />
									<ColumnDefinition Width="50"/>
								</Grid.ColumnDefinitions>
								<Grid.RowDefinitions>
									<RowDefinition/>
									<RowDefinition/>
									<RowDefinition/>
									<RowDefinition/>
									<RowDefinition/>
									<RowDefinition/>
									<RowDefinition/>
									<RowDefinition/>
								</Grid.RowDefinitions>
								<TextBlock Text="Optout Tracking Role" Grid.Row="0" Grid.Column="0"/>
								<Button Content="ON" Click="EnableOptoutTrackingRoleButton" Grid.Row="0" Grid.Column="1" Margin="1"/>
								<Button Content="OFF" Click="DisableOptoutTrackingRoleButton"  Grid.Row="0" Grid.Column="2" Margin="1"/>

								<TextBlock Text="Reject When Cannot Tracking" Grid.Row="1" Grid.Column="0"/>
								<Button Content="ON" Click="EnableRejectWhenCannotTrackingButton"  Grid.Row="1" Grid.Column="1" Margin="1"/>
								<Button Content="OFF" Click="DisableRejectWhenCannotTrackingButton"  Grid.Row="1" Grid.Column="2" Margin="1"/>

								<TextBlock Text="Skeleton Input" Grid.Row="2" Grid.Column="0"/>
								<Button Content="ON" Click="EnableSkeletonInputButton"  Grid.Row="2" Grid.Column="1" Margin="1"/>
								<Button Content="OFF" Click="DisableSkeletonInputButton"  Grid.Row="2" Grid.Column="2" Margin="1"/>

								<TextBlock Text="Auto Pose Update On Startup" Grid.Row="3" Grid.Column="0"/>
								<Button Content="ON" Click="EnableAutoPoseUpdateOnStartupButton"  Grid.Row="3" Grid.Column="1" Margin="1"/>
								<Button Content="OFF" Click="DisableAutoPoseUpdateOnStartupButton"  Grid.Row="3" Grid.Column="2" Margin="1"/>

								<TextBlock Text="Add Controller On Startup" Grid.Row="4" Grid.Column="0"/>
								<Button Content="ON" Click="EnableAddControllerOnStartupButton"  Grid.Row="4" Grid.Column="1" Margin="1"/>
								<Button Content="OFF" Click="DisableAddControllerOnStartupButton"  Grid.Row="4" Grid.Column="2" Margin="1"/>

								<TextBlock Text="Add Compatible Controller On Startup" Grid.Row="5" Grid.Column="0"/>
								<Button Content="ON" Click="EnableAddCompatibleControllerOnStartupButton" Grid.Row="5" Grid.Column="1" Margin="1"/>
								<Button Content="OFF" Click="DisableAddCompatibleControllerOnStartupButton"  Grid.Row="5" Grid.Column="2" Margin="1"/>

								<TextBlock Text="Diag Log On Startup" Grid.Row="6" Grid.Column="0"/>
								<Button Content="ON" Click="EnableDiagLogOnStartupButton" Grid.Row="6" Grid.Column="1" Margin="1"/>
								<Button Content="OFF" Click="DisableDiagLogOnStartupButton"  Grid.Row="6" Grid.Column="2" Margin="1"/>

								<TextBlock Text="Always Compatible" Grid.Row="7" Grid.Column="0"/>
								<Button Content="ON" Click="EnableAlwaysCompatibleButton" Grid.Row="7" Grid.Column="1" Margin="1"/>
								<Button Content="OFF" Click="DisableAlwaysCompatibleButton"  Grid.Row="7" Grid.Column="2" Margin="1"/>
							</Grid>
						</GroupBox>
						<GroupBox Header="Tracking Overrides" DockPanel.Dock="Top" Margin="0,10,0,0">
							<StackPanel>
								<TextBlock Text="From (Device path)"/>
								<TextBox Name="TrackingOverridesFromTextBox" Text="/devices/vmt/VMT_0" />
								<TextBlock Text="To (Device path, Semantic path)"/>
								<TextBox Name="TrackingOverridesToTextBox"  Text="/user/head" />
								<Button Name="TrackingOverridesAddButton" Content="Add" Margin="1" Click="TrackingOverridesAddButton_Click"/>
								<Button Name="TrackingOverridesRemoveAllButton" Content="Remove All" Margin="1" Click="TrackingOverridesRemoveAllButton_Click"/>
								<TextBlock Text='&#xA;If you want to override pose by VMT, Please set "VMT" to "From", "Target device" to "To".&#xA;&#xA;
If you want to override button, axis, fingers by VMT, Please set "Target device" to "From", "VMT" to "To".' TextWrapping="Wrap"/>
							</StackPanel>
						</GroupBox>
					</DockPanel>
				</DockPanel>
			</TabItem>
			<TabItem Header="Input">
				<DockPanel LastChildFill="False">
					<TextBlock TextAlignment="Center" Text="Control panel for testing each VMT Devices" DockPanel.Dock="Top" Background="#EEEEEE" />
					<GroupBox Header="Operation target (0～57)" DockPanel.Dock="Top">
						<DockPanel Margin="1">
							<TextBlock VerticalAlignment="Center" Text="VMT:" DockPanel.Dock="Left" Margin="1" />
							<Button Content="Right(2)" Click="TargetRightButton" DockPanel.Dock="Right" Margin="3,1,1,1" Padding="5,1,5,1"/>
							<Button Content="Left(1)" Click="TargetLeftButton" DockPanel.Dock="Right" Margin="3,1,1,1" Padding="5,1,5,1"/>
							<Button Content="HMD(0)" Click="TargetHMDButton" DockPanel.Dock="Right" Margin="3,1,1,1" Padding="5,1,5,1"/>
							<TextBox Name="InputVMTNoTextBox" Text="1" DockPanel.Dock="Left" Margin="1" />
						</DockPanel>
					</GroupBox>

					<TabControl DockPanel.Dock="Top">
						<TabItem Header="Button Axis Finger">
							<DockPanel>
								<GroupBox Header="Device registration (Only once each devices in one VR Session.)" DockPanel.Dock="Top">
									<StackPanel>
										<UniformGrid Columns="8" Rows="1">
											<Button Margin="1" Click="DisableButton">
												<TextBlock Text="[0]&#xa;Disable" TextAlignment="Center"/>
											</Button>
											<Button Margin="1" Click="TrackerButton">
												<TextBlock Text="[1]&#xa;Tracker" TextAlignment="Center"/>
											</Button>
											<Button Margin="1" Click="LeftHandButton">
												<TextBlock Text="[2] Left&#xa;Controller" TextAlignment="Center"/>
											</Button>
											<Button Margin="1" Click="RightHandButton">
												<TextBlock Text="[3] Right&#xa;Controller" TextAlignment="Center"/>
											</Button>
											<Button Margin="1,1,8,1" Click="TrackingReferenceButton">
												<TextBlock Text="[4] Tracking&#xa;Reference" TextAlignment="Center"/>
											</Button>
											<Button Margin="1" Click="LeftHandCompatibleButton">
												<TextBlock Text="[5] Left&#xa;Compatible" TextAlignment="Center"/>
											</Button>
											<Button Margin="1" Click="RightHandCompatibleButton">
												<TextBlock Text="[6] Right&#xa;Compatible" TextAlignment="Center"/>
											</Button>
											<Button Margin="1" Click="TrackerCompatibleButton">
												<TextBlock Text="[7] Tracker&#xa;Compatible" TextAlignment="Center"/>
											</Button>
										</UniformGrid>
										<UniformGrid Columns="8" Rows="1">
												<TextBlock Text="┗"/>
											<TextBlock Text=""/>
											<TextBlock Text="VMT"/>
											<TextBlock Text=""/>
											<TextBlock Text="┛" TextAlignment="Right"/>
											<TextBlock Text="┗"/>
											<DockPanel>
												<TextBlock Text="Index*" DockPanel.Dock="Left"/>
												<TextBlock Text="┛" TextAlignment="Right" DockPanel.Dock="Right"/>
											</DockPanel>
										</UniformGrid>
									</StackPanel>
								</GroupBox>
								<GroupBox Header="Button and Axis" DockPanel.Dock="Top" Height="350">
									<TabControl>
										<TabItem Header="Normal">
											<Grid>
												<Grid.ColumnDefinitions>
													<ColumnDefinition/>
													<ColumnDefinition/>
													<ColumnDefinition/>
												</Grid.ColumnDefinitions>
												<DockPanel Grid.Column="0" Margin="2" LastChildFill="False">
													<Grid DockPanel.Dock="Top">
														<Grid.ColumnDefinitions>
															<ColumnDefinition/>
															<ColumnDefinition/>
														</Grid.ColumnDefinitions>
														<Grid.RowDefinitions>
															<RowDefinition Height="38"/>
															<RowDefinition Height="38"/>
															<RowDefinition Height="31"/>
															<RowDefinition Height="31"/>
															<RowDefinition Height="31"/>
															<RowDefinition Height="31"/>
															<RowDefinition Height="31"/>
															<RowDefinition Height="31"/>
															<RowDefinition Height="31"/>
														</Grid.RowDefinitions>
														<Button PreviewMouseDown="Button0_MouseDown" PreviewMouseUp="Button0_MouseUp"  Margin="1" Grid.Column="0" Grid.Row="0" >
															<TextBlock Text="Button 0&#xA;System" TextAlignment="Center"/>
														</Button>
														<Button PreviewMouseDown="Button1_MouseDown" PreviewMouseUp="Button1_MouseUp"  Margin="1" Grid.Column="1" Grid.Row="0">
															<TextBlock Text="Button 1&#xA;A*" TextAlignment="Center"/>
														</Button>
														<Button PreviewMouseDown="Button2_MouseDown" PreviewMouseUp="Button2_MouseUp"  Margin="1" Grid.Column="0" Grid.Row="1" >
															<TextBlock Text="Button 2&#xA;" TextAlignment="Center"/>
														</Button>
														<Button PreviewMouseDown="Button3_MouseDown" PreviewMouseUp="Button3_MouseUp"  Margin="1" Grid.Column="1" Grid.Row="1" >
															<TextBlock Text="Button 3&#xA;B*" TextAlignment="Center"/>
														</Button>
														<Button PreviewMouseDown="Button4_MouseDown" PreviewMouseUp="Button4_MouseUp"  Margin="1" Grid.Column="0" Grid.Row="2" >
															<TextBlock Text="Button 4" TextAlignment="Center"/>
														</Button>
														<Button Content="Button 5" PreviewMouseDown="Button5_MouseDown" PreviewMouseUp="Button5_MouseUp"  Margin="1" Grid.Column="1" Grid.Row="2" />
														<Button Content="Button 6" PreviewMouseDown="Button6_MouseDown" PreviewMouseUp="Button6_MouseUp"  Margin="1" Grid.Column="0" Grid.Row="3" />
														<Button Content="Button 7" PreviewMouseDown="Button7_MouseDown" PreviewMouseUp="Button7_MouseUp"  Margin="1" Grid.Column="1" Grid.Row="3" />
														<Button Content="Button 8" PreviewMouseDown="Button8_MouseDown" PreviewMouseUp="Button8_MouseUp"  Margin="1" Grid.Column="0" Grid.Row="4" />
														<Button Content="Button 9" PreviewMouseDown="Button9_MouseDown" PreviewMouseUp="Button9_MouseUp"  Margin="1" Grid.Column="1" Grid.Row="4" />
														<Button Content="Button 10" PreviewMouseDown="Button10_MouseDown" PreviewMouseUp="Button10_MouseUp"  Margin="1" Grid.Column="0" Grid.Row="5" />
														<Button Content="Button 11" PreviewMouseDown="Button11_MouseDown" PreviewMouseUp="Button11_MouseUp"  Margin="1" Grid.Column="1" Grid.Row="5" />
														<Button Content="Button 12" PreviewMouseDown="Button12_MouseDown" PreviewMouseUp="Button12_MouseUp"  Margin="1" Grid.Column="0" Grid.Row="6" />
														<Button Content="Button 13" PreviewMouseDown="Button13_MouseDown" PreviewMouseUp="Button13_MouseUp"  Margin="1" Grid.Column="1" Grid.Row="6" />
														<Button Content="Button 14" PreviewMouseDown="Button14_MouseDown" PreviewMouseUp="Button14_MouseUp"  Margin="1" Grid.Column="0" Grid.Row="7" />
														<Button Content="Button 15" PreviewMouseDown="Button15_MouseDown" PreviewMouseUp="Button15_MouseUp"  Margin="1" Grid.Column="1" Grid.Row="7" />
														<Button Content="Button 16" PreviewMouseDown="Button16_MouseDown" PreviewMouseUp="Button16_MouseUp"  Margin="1" Grid.Column="0" Grid.Row="8" />
														<Button Content="Button 17" PreviewMouseDown="Button17_MouseDown" PreviewMouseUp="Button17_MouseUp"  Margin="1" Grid.Column="1" Grid.Row="8" />
													</Grid>
												</DockPanel>
												<DockPanel Grid.Column="1" Margin="2" LastChildFill="False">
													<DockPanel DockPanel.Dock="Top" Margin="1">
														<TextBlock Text="Trigger 0&#xA;Trigger*" DockPanel.Dock="Left" Width="55" />
														<Slider Minimum="0" Maximum="1" Value="0" Name="Slider0" ValueChanged="Slider0_ValueChanged" DockPanel.Dock="Left"/>
													</DockPanel>
													<DockPanel DockPanel.Dock="Top" Margin="1">
														<TextBlock Text="Trigger 1&#xA;Grip*" DockPanel.Dock="Left" Width="55" />
														<Slider Minimum="0" Maximum="1" Value="0" Name="Slider1" ValueChanged="Slider1_ValueChanged" DockPanel.Dock="Left"/>
													</DockPanel>
													<DockPanel DockPanel.Dock="Top" Margin="1">
														<TextBlock Text="Trigger 2&#xA;Force*" DockPanel.Dock="Left" Width="55" />
														<Slider Minimum="0" Maximum="1" Value="0" Name="Slider2" ValueChanged="Slider2_ValueChanged" DockPanel.Dock="Left"/>
													</DockPanel>
